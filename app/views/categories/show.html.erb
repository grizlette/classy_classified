<h1>Categories</h1>

<h3>--<%= @category.sub_category  %></h3>



<table class="table table-striped table-hover" border="1">
  <tr> <th>Picture</th>
       <th>Item Name</th>
       <th>Item Price</th>
       <th>Item Description</th>
  </tr>
<% @items.each do |item| %>
  <tr>  <td class="text-center"><%= image_tag item.photo.url(:exsm) %> </td>
        <td style="vertical-align:middle"><%= link_to item.item_name, item_path(item.id) %></td>
        <td style="vertical-align:middle">  $<%= item.item_price %></td>
        <td style="vertical-align:middle">  <%= item.item_description %></td></tr>

<% end %>
</table>
