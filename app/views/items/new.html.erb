<%= form_for @item, :html => { :multipart => true } do |f| %>
<%= f.label('Category: ') %>
<% @categories = Category.select(:category_name).distinct %>
<%= f.select(:category_id, @categories.all.collect {|p| [ p.category_name, p.id ]},{prompt: 'Select Category'}, {class: 'main_cat form-control', :style => "width:50%;"}) %>
<br>
<%= f.label('Subcategory') %>
<%= f.select(:category_id, Category.all.collect {|p| [ p.sub_category, p.id ] }, {prompt: 'Select Subcategory'}, {class: 'sub_cat form-control', :style => "width:50%;"}) %>
<br>
<%= f.text_field :item_name, class: "form-control", :placeholder => "Item Name", :style => "width:50%;" %>
<br>

<%= f.text_field :item_price, class: "form-control", :placeholder => "Item Price", :style => "width:50%;" %>
<br>

<%=f.text_area(:item_description, class: "form-control", :placeholder => "Enter Description", :size => "1x5", :style => "width:50%;") %>
<br>

<%= f.text_field :seller_name, class: "form-control", :placeholder => "Enter Your Name", :style => "width:50%;" %>
<br>

<%= f.text_field :seller_phone_number, class: "form-control", :placeholder => "Enter Your Phone Number", :style => "width:50%;" %>
<br>

<%= f.text_field :seller_email, class: "form-control", :placeholder => "Enter Your Email", :style => "width:50%;" %>
<br>

<%= f.text_field :seller_location, class: "form-control", :placeholder => "Enter Your Location", :style => "width:50%;" %>
<br>
<%= f.file_field :photo %>
<br>
<%= f.submit('List Item', class: "form-control btn btn-success", :style => "width:25%") %>
<% end %>
