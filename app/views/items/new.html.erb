<%= form_for @item do |f| %>
<%= f.label('Category: ') %>
<% @categories = Category.select(:category_name).distinct %>
<%= f.select(:category_id, @categories.all.collect {|p| [ p.category_name, p.id ]},{prompt: 'Select Category'}, {class: 'main_cat'}) %>
<br>
<%= f.label('Subcategory') %>
<%= f.select(:category_id, Category.all.collect {|p| [ p.sub_category, p.id ] }, {prompt: 'Select Subcategory'}, {class: 'sub_cat'}) %>
<br>
<%= f.label('Item Name') %>
<%= f.text_field :item_name %>
<br>
<%= f.label('Item Price') %>
<%= f.text_field :item_price %>
<br>
<%= f.label('Item Description') %>
<%= f.text_area :item_description %>
<br>
<%= f.label('Seller Name') %>
<%= f.text_field :seller_name %>
<br>
<%= f.label('Seller Phone Number') %>
<%= f.text_field :seller_phone_number %>
<br>
<%= f.label('Seller Email') %>
<%= f.text_field :seller_email %>
<br>
<%= f.label('Seller location') %>
<%= f.text_field :seller_location %>
<br>
<%= f.submit('List Item') %>
<% end %>
