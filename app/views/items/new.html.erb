<%= form_for @event do |f| %>
<%= f.label('Category: ') %>
<%= f.select(:category_id, Category.all.collect {|p| [ p.category, p.id ] }, {prompt: 'Select Category'}) %>
<br>
<%= f.label('Subategory') %>
<%= f.select(:category_id, Category.all.collect {|p| [ p.subcategory, p.id ] }, {prompt: 'Select Subcategory'}) %>
<br>
<%= f.label('Date and Time') %>
<%= f.datetime_select :event_date, start_year: Time.now.year, end_year: 2017 %>
<br>
<%= f.submit('Add Event') %>
<% end %>
