<table class="table table-striped table-hover" border="1">
  <tr> <th>Item Name</th>
       <th>Item Price</th>
       <th>Item Description</th>
  </tr>
<% @items.each do |item| %>

  <tr><td><%= link_to item.item_name, item_path(item.id) %></td>
        <td>  $<%= item.item_price %></td>
        <td>  <%= item.item_description %></td></tr>

<% end %>
</table>
